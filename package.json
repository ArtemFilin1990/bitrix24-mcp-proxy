{
  "name": "bitrix24-mcp-proxy",
  "version": "1.0.0",
  "description": "MCP Proxy для интеграции с Bitrix24 REST API",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts,.js,.cjs",
    "lint:fix": "eslint . --ext .ts,.js,.cjs --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "bitrix24",
    "mcp",
    "proxy",
    "api",
    "typescript"
  ],
  "author": "ArtemFilin1990",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArtemFilin1990/bitrix24-mcp-proxy.git"
  },
  "bugs": {
    "url": "https://github.com/ArtemFilin1990/bitrix24-mcp-proxy/issues"
  },
  "homepage": "https://github.com/ArtemFilin1990/bitrix24-mcp-proxy#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "pino": "^8.17.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^9.0.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,js,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
