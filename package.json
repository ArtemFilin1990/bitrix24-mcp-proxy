{
  "name": "bitrix24-mcp-proxy",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "node dist/index.js",
    "validate:openapi": "node scripts/validate-openapi.mjs",
    "build": "npm run validate:openapi && tsc",
    "vercel-build": "npm run validate:openapi && tsc && npm run vercel:bundle",
    "vercel:bundle": "mkdir -p dist && cp -R api dist/api",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --runInBand",
    "prepare": "husky"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "dotenv": "^16.4.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@apidevtools/swagger-parser": "^10.0.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.13.0",
    "husky": "^9.1.6",
    "jest": "^30.2.0",
    "nock": "^14.0.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  }
}
