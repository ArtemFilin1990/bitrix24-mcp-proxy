{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "api",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3"
    }
  },
  "routes": [
    {
      "src": "/mcp/ping",
      "dest": "/api/mcp/ping.js"
    },
    {
      "src": "/mcp/list_tools",
      "dest": "/api/mcp/list_tools.js"
    },
    {
      "src": "/mcp/call_tool",
      "dest": "/api/mcp/call_tool.js"
    },
    {
      "src": "/servers",
      "dest": "/api/servers.js"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
}
