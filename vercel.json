{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    { "src": "/mcp/ping", "dest": "/api/mcp/ping.js" },
    { "src": "/mcp/health", "dest": "/api/mcp/health.js" },
    { "src": "/mcp/list_tools", "dest": "/api/mcp/list_tools.js" },
    { "src": "/mcp/call_tool", "dest": "/api/mcp/call_tool.js" },
    { "src": "/servers", "dest": "/api/servers.js" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
      ]
    }
  ]
}
