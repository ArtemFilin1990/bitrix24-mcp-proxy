{
  "openapi": "3.1.0",
  "info": {
    "title": "Bitrix24 MCP Proxy",
    "version": "1.2.0",
    "description": "Proxy для выполнения Bitrix24 REST API через MCP (сделки, контакты, комментарии, автоматизация)."
  },
  "servers": [
    {
      "url": "https://bitrix24-mcp-proxy.vercel.app"
    }
  ],
  "paths": {
    "/mcp/ping": {
      "get": {
        "operationId": "ping",
        "summary": "Проверка доступности MCP",
        "responses": {
          "200": {
            "description": "MCP сервер отвечает",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mcp/list_tools": {
      "get": {
        "operationId": "listTools",
        "summary": "Получить список MCP инструментов",
        "responses": {
          "200": {
            "description": "Список инструментов MCP",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tools": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "description": { "type": "string" },
                          "parameters": { "type": "object", "additionalProperties": true }
                        },
                        "required": ["name", "description"]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mcp/call_tool": {
      "post": {
        "operationId": "callTool",
        "summary": "Выполнить инструмент Bitrix24",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tool": { "type": "string" },
                  "args": { "type": "object", "additionalProperties": true }
                },
                "required": ["tool"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Успешный ответ инструмента",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": { "type": "object", "additionalProperties": true }
                  }
                }
              }
            }
          },
          "4XX": {
            "description": "Ошибка запроса",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "error": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    },
    "/servers": {
      "get": {
        "operationId": "getMcpServers",
        "summary": "Получить список MCP серверов",
        "responses": {
          "200": {
            "description": "JSON со списком MCP серверов",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    }
  }
}
